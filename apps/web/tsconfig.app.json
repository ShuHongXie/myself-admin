{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    /* Linting */
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "jsx": "preserve", // 保留 JSX 语法，由 Vite 插件处理
    "jsxImportSource": "vue", // 指定 JSX 解析来自 Vue
    "paths": {
      "#/*": ["./src/*"]
    },
    "baseUrl": "."
  },
  "types": [
    "element-plus/global",
    "vite/client",
    "nprogress",
    "@vitejs/plugin-vue-jsx",
    "vue/jsx-runtime",
    "./src/apis/types.gen.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "auto-imports.d.ts",
    "node_modules/@myself/ui",
    "src/router/type.d.ts"
  ]
}
